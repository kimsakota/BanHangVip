<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:material="http://schemas.enis-solutions.com/dotnet/maui/uraniumui/material"
             xmlns:vm="clr-namespace:BanHangVip.ViewModels"
                xmlns:models="clr-namespace:BanHangVip.Models"
             x:Class="SeaOrder.Views.MainPage"
             BackgroundColor="#f8fafc"
             Title="SeaOrder">

    <Grid RowDefinitions="Auto, *, Auto">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="20,10" BackgroundColor="White">
            <Label Text="Danh sách hải sản" 
                   TextColor="#1e293b"
                   FontAttributes="Bold" 
                   FontSize="24"/>
            <Label Text="Chạm để nhập số kg" 
                   TextColor="#64748b" 
                   FontSize="14" 
                   VerticalOptions="End" 
                   TranslationY="20"/>
        </Grid>

        <!-- Product List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Products}"
                        SelectionMode="None"
                        Margin="15">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Border StrokeShape="RoundRectangle 20"
                            StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="15">
                        <Border.Shadow>
                            <Shadow Brush="#cbd5e1" Offset="2,4" Radius="8" Opacity="0.3"/>
                        </Border.Shadow>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=ProductTappedCommand}"
                                                  CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>

                        <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                            <Label Text="{Binding Icon}" FontSize="50" HorizontalOptions="Center"/>
                            <Label Text="{Binding Name}" 
                                   TextColor="#334155" 
                                   FontAttributes="Bold" 
                                   FontSize="16" 
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding DefaultPrice, StringFormat='{0:N0} đ/kg'}"
                                   TextColor="#059669"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   BackgroundColor="#ecfdf5"
                                   Padding="8,4"/>
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Current Order Panel (Bottom Sheet style) -->
        <Border Grid.Row="2" 
                IsVisible="{Binding IsCartVisible}"
                StrokeShape="RoundRectangle 20,20,0,0"
                BackgroundColor="White"
                Padding="20"
                Margin="0"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Offset="0,-4" Radius="10" Opacity="0.1"/>
            </Border.Shadow>

            <VerticalStackLayout Spacing="15">
                <Grid ColumnDefinitions="*, Auto">
                    <VerticalStackLayout>
                        <Label Text="ĐƠN HIỆN TẠI" FontSize="10" TextColor="#94a3b8" FontAttributes="Bold"/>
                        <HorizontalStackLayout Spacing="5">
                            <Label Text="{Binding CartItemCount}" FontSize="20" TextColor="#0369a1" FontAttributes="Bold"/>
                            <Label Text="món" FontSize="20" TextColor="#0369a1" FontAttributes="Bold"/>
                            <Label Text="•" FontSize="20" TextColor="#cbd5e1" Margin="5,0"/>
                            <Label Text="{Binding TotalCartWeight, StringFormat='{0:F1} kg'}" FontSize="20" TextColor="#0369a1" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <Button Grid.Column="1" 
                            Text="LƯU ĐƠN" 
                            Command="{Binding SaveOrderCommand}"
                            BackgroundColor="#0369a1" 
                            TextColor="White"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Padding="20,0"/>
                </Grid>

                <!-- Mini list of items inside the panel -->
                <CollectionView ItemsSource="{Binding CurrentCart}" HeightRequest="100">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:OrderItem">
                            <Border StrokeShape="RoundRectangle 12" BackgroundColor="#f1f5f9" Padding="10" WidthRequest="100">
                                <VerticalStackLayout>
                                    <Label Text="{Binding ProductName}" FontAttributes="Bold" TextColor="#334155" LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding Weight, StringFormat='{0:F1} kg'}" TextColor="#0369a1"/>
                                    <ImageButton Source="{FontImage Glyph='X', Color='#ef4444', Size=12}" 
                                                 HorizontalOptions="End"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=RemoveItemCommand}"
                                                 CommandParameter="{Binding .}"/>
                                </VerticalStackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>