<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BanHangVip.ViewModels"
             xmlns:model="clr-namespace:BanHangVip.Models"
             x:Class="BanHangVip.Views.DashboardPage"
             BackgroundColor="#F5F5F5"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto, *">
        <!-- Header / Stats Section -->
        <VerticalStackLayout Grid.Row="0" Spacing="15" Padding="15">
            <!-- Summary Cards -->
            <Grid ColumnDefinitions="*, *" ColumnSpacing="15">
                <!-- Card 1: Orders Count -->
                <Border StrokeShape="RoundRectangle 15" BackgroundColor="#0288D1" StrokeThickness="0" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="{Binding PendingOrderCount}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="ÄÆ¡n Ä‘ang chá»" TextColor="#E1F5FE"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Card 2: Total Weight -->
                <Border Grid.Column="1" StrokeShape="RoundRectangle 15" BackgroundColor="#00695C" StrokeThickness="0" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="{Binding TotalPendingWeight, StringFormat='{0:F2} kg'}" FontSize="32" FontAttributes="Bold" TextColor="White"/>
                        <Label Text="Tá»•ng lÆ°á»£ng chá»" TextColor="#E0F2F1"/>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!-- Action Bar -->
            <Grid ColumnDefinitions="*, Auto">
                <Label Text="Danh sÃ¡ch Ä‘Æ¡n hÃ ng" VerticalOptions="Center" FontAttributes="Bold" FontSize="18" TextColor="#333"/>
                <Button Grid.Column="1" 
                        Text="+ Táº¡o ÄÆ¡n Má»›i" 
                        Command="{Binding GoToCreateOrderCommand}"
                        BackgroundColor="#FF9800" 
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        HeightRequest="45"
                        Padding="20,0"/>
            </Grid>
        </VerticalStackLayout>

        <!-- Orders List -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Orders}" 
                        SelectionMode="None"
                        Margin="15,0,15,15">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="{OnIdiom Phone=1, Tablet=2}" VerticalItemSpacing="15" HorizontalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                    <Label Text="ðŸ“­" FontSize="50" HorizontalOptions="Center"/>
                    <Label Text="KhÃ´ng cÃ³ Ä‘Æ¡n hÃ ng nÃ o" TextColor="#999" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Order">
                    <Border StrokeShape="RoundRectangle 15" 
                            StrokeThickness="0"
                            BackgroundColor="White"
                            Padding="0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="0,2" Radius="5" Opacity="0.1"/>
                        </Border.Shadow>

                        <Grid RowDefinitions="Auto, Auto, Auto" Padding="15" RowSpacing="10">
                            <!-- Header: Table & Time -->
                            <Grid ColumnDefinitions="*, Auto">
                                <Label Text="{Binding CustomerName}" FontSize="18" FontAttributes="Bold" TextColor="#333" LineBreakMode="TailTruncation"/>
                                <Label Grid.Column="1" Text="{Binding CreatedAt, StringFormat='{0:HH:mm}'}" TextColor="#999" VerticalOptions="Center"/>
                            </Grid>

                            <!-- Items Summary -->
                            <VerticalStackLayout Grid.Row="1" Spacing="5">
                                <BoxView HeightRequest="1" Color="#F0F0F0" Margin="0,0,0,5"/>
                                <BindableLayout.ItemsSource>
                                    <Binding Path="Items"/>
                                </BindableLayout.ItemsSource>
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate x:DataType="model:OrderItem">
                                        <Grid ColumnDefinitions="*, Auto">
                                            <Label Text="{Binding Item.Name}" TextColor="#555" FontSize="14"/>
                                            <Label Grid.Column="1" Text="{Binding DisplayWeight}" FontAttributes="Bold" TextColor="#333" FontSize="14"/>
                                        </Grid>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </VerticalStackLayout>

                            <!-- Footer: Action -->
                            <Grid Grid.Row="2" ColumnDefinitions="*, Auto" Margin="0,10,0,0">
                                <Label Text="{Binding TotalWeight, StringFormat='Tá»•ng: {0:F2} kg'}" VerticalOptions="Center" TextColor="#00695C" FontAttributes="Bold"/>

                                <Button Grid.Column="1" 
                                        Text="XONG" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=QuickDeliverCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#E0F2F1"
                                        TextColor="#00695C"
                                        FontAttributes="Bold"
                                        HeightRequest="36"
                                        Padding="15,0"
                                        CornerRadius="18"/>
                            </Grid>

                            <!-- Tap entire card to go to detail -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:DashboardViewModel}}, Path=GoToDetailCommand}" CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>