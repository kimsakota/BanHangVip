<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BanHangVip.ViewModels"
             xmlns:model="clr-namespace:BanHangVip.Models"
             x:Class="BanHangVip.Views.HistoryPage"
             Title="Lịch sử kho">

    <Grid RowDefinitions="Auto, *">
        <!-- Tabs -->
        <Grid ColumnDefinitions="*, *" HeightRequest="50">
            <Button Text="NHẬP HÀNG" 
                    BackgroundColor="{Binding IsImportTab, Converter={StaticResource BoolToColorConverter}, ConverterParameter=True}" 
                    TextColor="{Binding IsImportTab, Converter={StaticResource BoolToTextConverter}, ConverterParameter=True}"
                    Command="{Binding SwitchTabCommand}" CommandParameter="Import"
                    CornerRadius="0"/>
            <Button Grid.Column="1" Text="GIAO HÀNG" 
                    BackgroundColor="{Binding IsImportTab, Converter={StaticResource BoolToColorConverter}, ConverterParameter=False}"
                    TextColor="{Binding IsImportTab, Converter={StaticResource BoolToTextConverter}, ConverterParameter=False}"
                    Command="{Binding SwitchTabCommand}" CommandParameter="Export"
                    CornerRadius="0"/>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Records}" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:HistoryRecord">
                    <Border StrokeShape="RoundRectangle 5" Padding="10" Margin="0,5" BackgroundColor="White" StrokeThickness="0.5" Stroke="#CCC">
                        <Grid ColumnDefinitions="Auto, *, Auto">
                            <BoxView WidthRequest="5" Color="{Binding TypeColor}" VerticalOptions="Fill"/>
                            <VerticalStackLayout Grid.Column="1" Padding="10,0">
                                <Label Text="{Binding Id}" FontAttributes="Bold"/>
                                <Label Text="{Binding Description}" TextColor="#555"/>
                                <Label Text="{Binding Date, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="12" TextColor="#999"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" Text="{Binding TotalWeight, StringFormat='{0} kg'}" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

    <ContentPage.Resources>
        <!-- Simple styles for demo tab switching (Active: Blue, Inactive: Gray) -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentPage.Resources>
</ContentPage>