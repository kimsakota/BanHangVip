<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BanHangVip.ViewModels"
             xmlns:models="clr-namespace:BanHangVip.Models"
             x:Class="BanHangVip.Views.ManageProductsView"
             Title="Quản lý Hải sản"
             BackgroundColor="#f8fafc">

    <Grid RowDefinitions="Auto, *">
        <Grid Grid.Row="0" Padding="15" BackgroundColor="White">
            <Label Text="Danh mục sản phẩm" TextColor="#1e293b" FontAttributes="Bold" FontSize="20" VerticalOptions="Center"/>
            <Button Text="+" 
                    Command="{Binding AddProductCommand}"
                    HorizontalOptions="End" 
                    BackgroundColor="#0369a1" 
                    TextColor="White" 
                    WidthRequest="40" 
                    HeightRequest="40" 
                    CornerRadius="20"
                    Padding="0"
                    FontSize="24"/>
        </Grid>

        <CollectionView Grid.Row="1" ItemsSource="{Binding Products}" Margin="15">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Border StrokeShape="RoundRectangle 15" BackgroundColor="White" Padding="15" StrokeThickness="0">
                        <Border.Shadow>
                            <Shadow Brush="#cbd5e1" Offset="1,2" Radius="3" Opacity="0.1"/>
                        </Border.Shadow>
                        <Grid ColumnDefinitions="Auto, *, Auto" ColumnSpacing="15">
                            <Label Text="{Binding Icon}" FontSize="30" VerticalOptions="Center"/>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="{Binding Name}" TextColor="#334155" FontAttributes="Bold" FontSize="16"/>
                                <Label Text="{Binding DefaultPrice, StringFormat='Giá gốc: {0:N0} đ/kg'}" TextColor="#059669" FontSize="12"/>
                            </VerticalStackLayout>
                            <Label Grid.Column="2" Text="✎" TextColor="#cbd5e1" FontSize="20" VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>