<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BanHangVip"
             xmlns:converters="clr-namespace:BanHangVip.Converters" 
             x:Class="BanHangVip.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:TypeToColorConverter x:Key="TypeToColorConverter" />
            <converters:TypeToIconConverter x:Key="TypeToIconConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>